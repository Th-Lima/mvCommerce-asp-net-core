@model mvCommerce.Models.Category
@{
    ViewData["Title"] = "Register";
}

<h1>Cadastrar</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Nome</label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Slug">Slug</label>
        <input asp-for="Slug" class="form-control" placeholder="Digite o slug da categoria">
        <span asp-validation-for="Slug" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoryFatherId">Categoria Pai</label>
        <input asp-for="CategoryFatherId" class="form-control" placeholder="Digite o ID da categoria pai">
        <span asp-validation-for="CategoryFatherId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-info">Salvar</button> <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
</form>