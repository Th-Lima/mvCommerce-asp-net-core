@model Client
@{
    ViewData["Title"] = "RegisterClient";
}

<main role="main">
    <form asp-action="RegisterClient" asp-controller="Home" method="post">
        <section class="container" style="margin-top: 50px">
            <div class="row">
                <aside class="col-sm-6">
                    <h3 class="subtitle-doc">
                        Cadastre-se
                    </h3>
                    <div id="code_register_1">
                        <div class="card">
                            <header class="card-header">
                                <a asp-controller="Home" asp-action="Login" class="float-right btn btn-outline-warning my-2 my-sm-0 bg-purple">Login</a>
                            </header>
                            <article class="card-body">
                                <div class="form-row">

                                    <div class="col form-group">
                                        <label asp-for="Name">Nome</label>
                                        <input asp-for="Name" type="text" class="form-control" placeholder="Nome">
                                    </div>

                                    <div class="col form-group">
                                        <label asp-for="BirthDate">Data de Nascimento</label>
                                        <input asp-for="BirthDate" type="text" class="form-control" placeholder="Data de Nascimento">
                                    </div>
                                </div>
                                <div class="form-row col form-group">
                                    <label asp-for="CPF">CPF</label>
                                    <input asp-for="CPF" type="text" class="form-control" placeholder="">
                                </div>

                                <label>Sexo</label>
                                <div class="form-group">
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option1">
                                        <span class="form-check-label"> Masculino </span>
                                    </label>
                                    <label class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="gender" value="option2">
                                        <span class="form-check-label"> Feminino </span>
                                    </label>
                                </div>

                                <div class="col form-group col-sm-5">
                                    <label asp-for="Phone">Telefone</label>
                                    <input asp-for="Phone" type="text" class="form-control" placeholder="">
                                </div>

                                <div class="form-group">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="">
                                    <small>
                                        Nunca compartilhe seu email com outras pessoas.
                                    </small>
                                </div>

                                <div class="form-group">
                                    <label asp-for="Password">Criar senha</label>
                                    <input asp-for="Password" class="form-control" type="password">
                                    <small>
                                        Nunca compartilhe sua senha com outras pessoas.
                                    </small>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block btn-outline-warning bg-purple my-2 my-sm-0"> Cadastrar </button>
                                </div>
                            </article>
                            <div class="border-top card-body text-center ">Já possui uma conta? <a asp-controller="Home" asp-action="Login">Clique aqui</a></div>
                        </div>
                    </div>
                </aside>
            </div>
        </section>
    </form>
</main>

