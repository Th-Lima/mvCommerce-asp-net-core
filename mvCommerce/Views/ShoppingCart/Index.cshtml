@model List<mvCommerce.Models.ProductAggregator.ProductItem>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <section class="container" id="order" style="margin-top: 50px">

        <h2 class="title-doc">Meu Carrinho</h2>
        <div id="code_cart">
            <div class="card">
                <table class="table table-hover shopping-cart-wrap">
                    <thead class="text-muted">
                        <tr>
                            <th scope="col">Produto</th>
                            <th scope="col" width="120">Quantidade</th>
                            <th scope="col" width="170">Preço</th>
                            <th scope="col" width="280" class="text-right">Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <figure class="media">
                                        <div class="img-wrap"><img src="images/items/1.jpg" class="img-thumbnail img-sm"></div>
                                        <figcaption class="media-body">
                                            <h6 class="title text-truncate">@item.Name</h6>
                                            <dl class="dlist-inline small">
                                                <dt>Size: </dt>
                                                <dd>XXL</dd>
                                            </dl>
                                            <dl class="dlist-inline small">
                                                <dt>Quantidade: </dt>
                                                <dd>@item.AmountProductsCart</dd>
                                            </dl>
                                        </figcaption>
                                    </figure>
                                </td>
                                <td>
                                    <div class="col-auto">
                                        <div class="input-group mb-2">
                                            <input type="hidden" value="@item.Id" class="inputProductId"/>
                                            <input type="hidden" value="@item.Amount" class="inputAmountStore"/>
                                            <input type="hidden" value="@item.Price" class="inputValueUnit"/>
                                            <div class="input-group-prepend">
                                                <a class="btn btn-outline-info amount amountLarger" style="width: 60px"> + </a>
                                            </div>
                                            <input class="inputAmountProductCart" readonly="readonly" type="text" value="@item.AmountProductsCart" style="width: 60px; border:none; text-align:center;" />
                                            <div class="input-group-append"> 
                                                <a  class="btn btn-outline-info amount amountLess" style="width: 60px"> - </a>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="price-wrap col-md-12" style="width:250px;">
                                        <var class="price"><small>Total: </small> <span style="font-size:x-large" class="priceProduct">@((item.Price * item.AmountProductsCart).ToString("C"))</span></var>
                                        <small class="text-muted">(@item.Price.ToString("C") cada)</small>
                                    </div> <!-- price-wrap .// -->
                                </td>
                                <td class="text-right">
                                    <a asp-controller="ShoppingCart" asp-action="RemoveItem" asp-route-id="@item.Id" class="btn btn-outline-danger"> × Remover</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div> <!-- card.// -->
        </div> <!-- code-wrap.// -->
    </section>
    <br />
    <br />
    <section class="container">
        <div class="row">

            <aside class="col-md-4">
                <h4 class="subtitle-doc">
                    Frete
                </h4>
                <div id="code_desc_align" class="box">
                    <div class="box">
                        <dl class="dlist-align">
                            <dt>CEP:  </dt>
                            <dd><input class="form-control" type="text" name="cep" /></dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt><input type="radio" name="frete" value="sedex" /> </dt>
                            <dd>SEDEX - R$ 99,95</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt><input type="radio" name="frete" value="pac" /></dt>
                            <dd>PAC - R$ 67,30</dd>
                        </dl>
                    </div> <!-- box.// -->
                </div> <!-- code-wrap.// -->
            </aside>
            <aside class="col-md-4">
                <h4 class="subtitle-doc">
                    Resumo
                    <a href="#" data-html="code_desc_right" class="showcode">[code]</a>
                </h4>
                <div id="code_desc_right" class="box">
                    <div class="box">
                        <dl class="dlist-align">
                            <dt>Subtotal: </dt>
                            <dd class="text-right">R$120,00</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Frete:</dt>
                            <dd class="text-right">R$ 67,30</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>TOTAL:</dt>
                            <dd class="text-right">187,30</dd>
                        </dl>
                    </div> <!-- box.// -->
                </div> <!-- code-wrap.// -->
            </aside>
        </div>
    </section>
</div>